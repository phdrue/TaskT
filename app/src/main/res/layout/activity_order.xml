<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер заказа"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:textSize="25dp"
        android:layout_marginBottom="50dp"
        android:textColor="#000"
        android:id="@+id/order_id"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Адрес доставки"
        android:layout_below="@+id/order_id"
        android:textAlignment="textStart"
        android:gravity="start"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/order_address"
        android:layout_marginBottom="10dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя клиента"
        android:textAlignment="textStart"
        android:gravity="start"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/order_address"
        android:id="@+id/order_client"
        android:layout_marginBottom="10dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название товара"
        android:textAlignment="textStart"
        android:gravity="start"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/order_product"
        android:layout_below="@+id/order_client"
        android:layout_marginBottom="10dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Стоимость товара"
        android:textAlignment="textStart"
        android:gravity="start"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/order_product"
        android:id="@+id/order_price"
        android:layout_marginBottom="10dp"></TextView>
</RelativeLayout>